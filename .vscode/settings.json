{
    "editor.fontSize": 13,
    "editor.tabSize": 4,
    "prettier.useTabs": true,
	"liveSassCompile.settings.formats": [
		{
			"format": "compressed",
			"extensionName": ".css",
			"savePath": "public/css/"
		},
		/*
		{
			"format": "expanded",
			"extensionName": ".css",
			"savePath": "web/css/"
		},
		*/
	],

	"liveSassCompile.settings.generateMap": false,

	"liveSassCompile.settings.autoprefix": [
		"> 1%",
		"last 2 versions"
	]
}